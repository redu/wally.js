# The JFile defines your JavaScript library and its dependencies.
# Read more on https://github.com/ismasan/jbundle/blob/master/README.md
#
# Version.
# jbundle command will put source and minified versions in
# - dist/0.0.1/
# - dist/0.0/
#
version '0.0.1'

# put your development files here
#
src_dir '.'

# Define one or more JavaScript bundles
#
bundle 'wally.js' do
  license 'src/license.txt'
  file 'src/lib/jquery.timeago.js'
  file 'src/support/transforms.js'
  file 'src/support/handlebars_helpers.js'
  file 'src/config/timeago.js'
  file 'assets/js/wally-effects.js'
  file 'src/app.js'
  file 'src/support/rest_adapter.js'
  file 'src/models/wall.js'
  file 'src/models/entry.js'
  file 'src/models/author.js'
  file 'src/models/post.js'
  file 'src/models/answer.js'
  file 'src/controllers/application_controller.js'
  file 'src/controllers/wall_controller.js'
  file 'src/controllers/new_post_controller.js'
  file 'src/controllers/post_list_controller.js'
  file 'src/views/application_view.js'
  file 'src/views/wall_view.js'
  file 'src/views/post_view.js'
  file 'src/views/answer_view.js'
  file 'src/views/new_post_view.js'
  file 'src/views/post_list_view.js'
  file 'src/views/new_answer_view.js'
  file 'src/router.js'
end

# Optional post-bundling filter, for example for string substitution
#
filter do |src, config|
  src.gsub /<VERSION>/, config.version.to_s
end

# your packaged, versioned releases go here
#
target_dir 'dist'
